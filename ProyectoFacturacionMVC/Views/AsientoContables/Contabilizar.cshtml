@model ProyectoFacturacionMVC.Models.AsientoContable

@{
    ViewData["Title"] = "Contabilizar Asiento Contable";
}

<h4>Contabilizar Asiento Contable</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Contabilizar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" readonly />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Auxiliar" class="control-label"></label>
                <input asp-for="Auxiliar" class="form-control" type="hidden" readonly />
                <input class="form-control" readonly value="Facturacion" />
                <span asp-validation-for="Auxiliar" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CuentaDb" class="control-label"></label>
                <input class="form-control" readonly value="@Model.CuentaDbDesc"/>
                <input asp-for="CuentaDb" class="form-control" type="hidden" readonly />
                <span asp-validation-for="CuentaDb" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="CuentaCr" class="control-label"></label>
                <input class="form-control" readonly value="@Model.CuentaCrDesc" />
                <input asp-for="CuentaCr" class="form-control" type="hidden" readonly />
                <span asp-validation-for="CuentaCr" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Monto" class="control-label"></label>
                <input asp-for="Monto" class="form-control" readonly />
                <span asp-validation-for="Monto" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group form-check">
                <label class="form-check-label">
                    @Html.DisplayNameFor(model => model.Estado)
                    @if (Convert.ToBoolean(Model.Estado))
                    {
                        <span class="badge bg-success">Enviado</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Pendiente</span>
                    }
                    <input class="form-check-input" type="hidden" asp-for="Estado" />
                </label>
            </div>
            @*<div class="form-group">
                <label asp-for="FechaCreacion" class="control-label"></label>
                <input asp-for="FechaCreacion" class="form-control" />
                <span asp-validation-for="FechaCreacion" class="text-danger"></span>
            </div>*@
            @*<br />*@
            @*<div class="form-group">
                <label asp-for="IdFactura" class="control-label"></label>
                <input asp-for="IdFactura" class="form-control" />
                <span asp-validation-for="IdFactura" class="text-danger"></span>
            </div>*@
            <br />
            <div class="form-group">
                <input type="submit" value="Contabilizar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar al listado</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
