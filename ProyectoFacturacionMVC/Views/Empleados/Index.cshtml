@model IEnumerable<ProyectoFacturacionMVC.Models.Empleado>

@{
    ViewData["Title"] = "Index";
}

<h4>Lista de Empleados</h4>

<p>
    <a asp-action="Create">Agregar empleado</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comision)%
            </td>
            <td>
                @if (Convert.ToBoolean(item.Activo))
                {
                    <span class="badge bg-success">Activo</span>
                } else {
                    <span class="badge bg-secondary">Inactivo</span>
                }
            </td>
            <td>
                <span>@item.Fecha.ToString("yyyy-MM-dd")</span>
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.Id">Detalles</a> |
                <a asp-action="Delete" class="btn btn-danger"asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
